<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_item_labs_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Laboratorio"
        app:srcCompat="@drawable/ic_chemistry"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_item_labs_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_item_labs_select"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/txtid_item_labs_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_labs_select"
        android:layout_toEndOf="@+id/btn_item_labs_select"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />
</RelativeLayout>